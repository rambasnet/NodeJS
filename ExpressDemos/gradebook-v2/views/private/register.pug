extends modallayout

block content
  .container
    .card.card-register.mx-auto.mt-5
      .card-header Register an Account
      .card-body
        form(method="POST" target="")
          .form-group
            .form-row
              .col-md-6
                .form-label-group
                  input#firstName.form-control(type='text' name="firstName" placeholder='First name' required='required' autofocus='autofocus')
                  label(for='firstName') First name
              .col-md-6
                .form-label-group
                  input#lastName.form-control(type='text' name="lastName" placeholder='Last name' required='required')
                  label(for='lastName') Last name
          .form-group
            .form-label-group
              input#inputEmail.form-control(type='email' name="email" placeholder='Email address' required='required')
              label(for='inputEmail') Email address
          .form-group
            .form-row
              .col-md-6
                .form-label-group
                  input#inputPassword.form-control(type='password' name="password" placeholder='Password' required='required')
                  label(for='inputPassword') Password
              .col-md-6
                .form-label-group
                  input#confirmPassword.form-control(type='password' name="password1" placeholder='Confirm password' required='required')
                  label(for='confirmPassword') Confirm password
          button.btn.btn-primary.btn-block(type="submit") Register
        .text-center
          a.d-block.small.mt-3(href='/grade/login') Login Page
          a.d-block.small(href='/grade/forgotpass') Forgot Password?
